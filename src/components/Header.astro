---
import { SITE_TITLE } from "../consts";
import Navigation from "./Navigation.astro";
---

<header class="navigation">
  <p class="navigation-heading">
    {SITE_TITLE}<span class="dot"></span>
  </p>

  <input type="checkbox" class="navigation__checkbox" id="navi-toggle" />

  <label for="navi-toggle" class="navigation__button" role="button">
    <span class="navigation__icon">&nbsp;</span>
    <p class="navi-text">Display navigation sidebar</p>
  </label>

  <div class="navigation__background">&nbsp;</div>

  <Navigation bg="navigation__nav" />
</header>

<style lang="scss">
  @use "../styles/abstracts/mixins" as *;
  @use "../styles/abstracts/variables" as *;

  .navi-text {
    visibility: hidden;
  }
  .navigation {
    width: 50vw;
    margin: 0 auto 0 auto;

    @include respond(phone) {
      width: 100%;
    }

    &__checkbox {
      display: none;
    }

    &__button {
      height: 6rem;
      width: 6rem;
      cursor: pointer;
      position: absolute;
      margin-left: 50vw;
      top: 0.5rem;
      left: 22vw;
      text-align: center;
      z-index: 6000;

      @include respond(tab-port) {
        top: -1rem;
      }

      @include respond(phone) {
        margin-left: 60vw;
      }
    }

    &__background {
      background-color: rgba(var($color-black), 0.8);
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 0;
      transition: all 0.3s;
      opacity: 0;

      @supports (-webkit-backdrop-filter: blur(1rem)) or
        (backdrop-filter: blur(1rem)) {
        -webkit-backdrop-filter: blur(1rem);
        backdrop-filter: blur(1rem);
        background-color: rgba($color-black, 0.3);
      }
    }
    //FUNCTIONALITY

    &__checkbox:checked ~ &__background {
      z-index: 5000;
      opacity: 1;
      width: 100%;
    }

    //ICON
    &__icon {
      position: absolute;
      margin-top: 3.5rem;
      z-index: 9000;

      &,
      &::before,
      &::after {
        width: 3rem;
        height: 2px;
        background-color: var(--color-black);
        display: inline-block;
      }

      &::before,
      &::after {
        content: "";
        position: absolute;
        left: 0;
        transition: all 0.2s;
      }

      &::before {
        top: -0.8rem;
      }
      &::after {
        top: 0.8rem;
      }
    }

    &__button:hover &__icon::before {
      top: -1rem;
    }

    &__button:hover &__icon::after {
      top: 1rem;
    }

    &__checkbox:checked + &__button &__icon {
      position: fixed;
      right: 0;
      margin-right: 1rem;
      background-color: transparent;

      @include respond(phone) {
        top: 0;
        margin-right: 3.5rem;
      }
    }

    &__checkbox:checked + &__button &__icon::before {
      top: 0;
      transform: rotate(135deg);
    }

    &__checkbox:checked + &__button &__icon::after {
      top: 0;
      transform: rotate(-135deg);
    }
  }
</style>
